<Window x:Class="LearnBinding.BindingValidation.ValidationSample01" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:LearnBinding.BindingValidation" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="ValidationSample01" Width="800"
        Height="450" mc:Ignorable="d">
    <StackPanel Margin="10" Background="LightBlue">
        <TextBlock Margin="5" FontSize="20"
                   Text="第一个box演示最基本的数据验证：" />
        <TextBox x:Name="TextBox1" Height="30"
                 Margin="5" />
        <TextBlock Margin="5" FontSize="20"
                   Text="第二个box演示带错误提示的验证：" />
        <TextBox x:Name="TextBox2" Height="30"
                 Margin="5" BorderBrush="Black" />
        <Slider x:Name="Slider01" Height="30"
                Margin="5" Maximum="110"
                Minimum="-10" />
    </StackPanel>
</Window>
