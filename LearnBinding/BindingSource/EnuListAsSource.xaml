<Window
    x:Class="LearnBinding.BindingSource.EnuListAsSource"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LearnBinding.BindingPath"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="EnuListAsSource"
    Width="240"
    Height="300"
    mc:Ignorable="d">
    <StackPanel x:Name="StackPanel1" Background="AntiqueWhite">
        <TextBlock Margin="5" Text="Student ID:" />
        <TextBox
            x:Name="IdTextBox"
            Margin="5"
            BorderBrush="Black" />
        <TextBlock Margin="5" Text="Student List:" />
        <ListBox
            x:Name="StudenListBox"
            Height="160"
            Margin="5" />
    </StackPanel>


</Window>
