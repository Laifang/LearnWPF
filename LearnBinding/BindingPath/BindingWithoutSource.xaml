<Window x:Class="LearnBinding.BindingPath.BindingWithoutSource" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:LearnBinding.BindingPath" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib" Title="BindingWithoutSource"
        Width="400" Height="200"
        mc:Ignorable="d">
    <StackPanel>
        <StackPanel.DataContext>
            <local:Student Name="tom" Age="18"
                           Id="1" />
        </StackPanel.DataContext>
        <TextBox Text="{Binding Id}" />
        <TextBox Text="{Binding Name}" />
        <TextBox Text="{Binding Age}" />

        <!--  这里仿佛是设置了一个既没有source 也没有path的binding 。会自动往上找DataContext  -->
        <StackPanel>
            <StackPanel.DataContext>
                <sys:String>Hello DataContext</sys:String>
            </StackPanel.DataContext>
            <TextBlock Text="{Binding}" />
            <TextBlock Text="{Binding}" />
            <TextBlock Text="{Binding}" />
        </StackPanel>
    </StackPanel>

</Window>
