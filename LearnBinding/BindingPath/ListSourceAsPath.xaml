<Window x:Class="LearnBinding.BindingPath.ListSourceAsPath" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:LearnBinding.BindingPath" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="List数据源，不同Path的使用" Width="800"
        Height="450" mc:Ignorable="d">
    <StackPanel>
        <GroupBox Header="默认元素作为Path">
            <StackPanel>
                <TextBox x:Name="TextBox1" Height="30"
                         Margin="5" BorderBrush="Black" />
                <TextBox x:Name="TextBox2" Height="30"
                         Margin="5" BorderBrush="Black" />
                <TextBox x:Name="TextBox3" Height="30"
                         Margin="5" BorderBrush="Black" />
            </StackPanel>
        </GroupBox>
        <GroupBox Header="子级元素作为Path,一路斜线下去">
            <!--  有个疑问 在binding中，elementName 和Source 的区别  -->
            <StackPanel>
                <TextBox x:Name="TextBox4" Height="30"
                         Margin="5" BorderBrush="Black" />
                <TextBox x:Name="TextBox5" Height="30"
                         Margin="5" BorderBrush="Black" />
                <TextBox x:Name="TextBox6" Height="30"
                         Margin="5" BorderBrush="Black" />
            </StackPanel>
        </GroupBox>
    </StackPanel>
</Window>
