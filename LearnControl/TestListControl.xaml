<Window x:Class="LearnControl.TestListControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:LearnControl" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="TestListControl" Width="400"
        Height="200" mc:Ignorable="d">
    <Grid HorizontalAlignment="Center">
        <ListBox Margin="5">
            <CheckBox x:Name="CheckBox1" Content="Tim" />
            <CheckBox x:Name="CheckBox2" Content="Tom" />
            <CheckBox x:Name="CheckBox3" Content="Jack" />
            <Button x:Name="Button1" Content="Mess" />
            <Button x:Name="Button2" Content="Oven" />
            <Button x:Name="Button3" Click="Button3_OnClick"
                    Content="Ronaldo" />
            <TextBlock Text="点击最后一个按钮 显示 按钮父控件类型" TextAlignment="Center" />
        </ListBox>
    </Grid>
</Window>
